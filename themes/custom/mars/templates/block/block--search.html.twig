{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}
<div id="blockMarsSearch" class="block-mars-search col-xs-12 col-sm-4 col-md-5 right-section">
  <div class="top-text">
    <ul class="list-inline">
      <li><a href="#">About AMS</a></li>
      <li><a href="#">News and Announcements</a></li>
      <li><a href="#">Careers</a></li>
      <li><a href="#">For Employees</a></li>
      <li><a href="#">Contact Us</a></li>
    </ul>
  </div>
  <div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    {% if label %}
      <h2{{ title_attributes.addClass('visually-hidden') }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% block content %}
      {{ content }}
    {% endblock %}
  </div>
  <div class="bottom-text">
    <ul class="list-inline">
      <li><a href="#">Advanced Search</a></li>
      <li><a href="#">A-Z Glossary & Index</a></li>
    </ul>
  </div>
</div>